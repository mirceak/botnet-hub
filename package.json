{
  "version": "0.0.0",
  "type": "module",
  "bin": "build/main.js",
  "name": "app",
  "scripts": {
    "docs": "typedoc --entryPointStrategy expand ./ --exclude \"**/*+(.+(test|d)).ts\" --exclude \"node_modules/**\" --exclude \"docs/**\" --exclude \"build/**\" --exclude \"src/exampleTest/**\" --exclude \"coverage/**\" --exclude \"./jest.config.mjs\"",
    "dev": "nodemon -e * --watch src --exec \"yarn tsc-build && node --experimental-vm-modules build/main.js\"",
    "tsc-build": "set NODE_OPTIONS=es-module-specifier-resolution=node && tsc -p tsconfig.json",
    "build:release": "set NODE_OPTIONS=es-module-specifier-resolution=node && tsc -p tsconfig.release.json && tsc-alias ",
    "test": "set NODE_OPTIONS=es-module-specifier-resolution=node && set NODE_OPTIONS=--experimental-vm-modules && jest --coverage",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --watchAll --coverage",
    "prettier": "prettier --config .prettierrc.json --write .",
    "lint": "eslint",
    "lint-scss": "stylelint",
    "prepare": "node .husky/remove-old.js && git config --unset core.hooksPath && husky install && npx husky add .husky/pre-commit \"npx lint-staged\" && git add .husky/pre-commit"
  },
  "lint-staged": {
    "*.ts": "yarn lint",
    "*.scss": "yarn lint-scss"
  },
  "imports": {
    "#node_modules/*": "./node_modules/*",
    "#database/*.js": {
      "node": "./build/database/*.js",
      "default": "./src/database/*.js"
    },
    "#helpers/*.js": {
      "node": "./build/helpers/*.js",
      "default": "./src/helpers/*.js"
    },
    "#kernel/*.js": {
      "node": "./build/kernel/*.js",
      "default": "./src/kernel/*.js"
    },
    "#src/*.js": {
      "node": "./build/*.js",
      "default": "./src/*.js"
    },
    "#remoteModules/*.js": {
      "node": "./build/database/seed/remote/modules/*.js",
      "default": "./src/database/seed/remote/modules/*.js"
    }
  },
  "dependencies": {
    "sequelize": "^6.29.3",
    "sqlite3": "^5.1.6",
    "express": "^5.0.0-beta.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "sass": "^1.59.3",
    "jest": "^29.5.0"
  },
  "devDependencies": {
    "lint-staged": "^13.2.0",
    "path-to-regexp": "^6.2.1",
    "prettier": "^2.8.4",
    "eslint": "^8.36.0",
    "stylelint": "^15.3.0",
    "nodemon": "^2.0.21",
    "husky": "^8.0.3",
    "typescript": "^5.0.3",
    "typedoc": "^0.23.28",
    "ts-jest": "^29.0.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@types/sequelize": "^4.28.14",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^11.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^31.0.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-selector-bem-pattern": "^2.1.1"
  },
  "resolutions": {
    "qs": ">=6.9.7",
    "sqlite3": ">=4.1.1",
    "http-cache-semantics": ">=4.1.1"
  }
}
