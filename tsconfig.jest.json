{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "#kernel/*": ["./src/kernel/*"],
      "/src/*": ["./src/*"],
      "/remoteModules/*": ["./src/database/seed/remote/modules/*"],
      "/node_modules/*": ["./node_modules/*"]
    }
  }
}
