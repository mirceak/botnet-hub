{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2021", "dom"],
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "paths": {
      "@node_modules/*": ["./node_modules/*"],
      "@src/*": ["./src/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@kernel/*": ["./src/kernel/*"],
      "@database/*": ["./src/database/*"],
      "@remoteModules/*": ["./src/database/seed/remote/modules/*"]
    }
  },
  "typedocOptions": {
    "name": "appDocumentation",
    "entryPoints": [
      "src/database/seed/remote/modules/mainRemote.ts",
      "src/main.ts",
      "src/database/seed/remote/modules/frontend/engine/components/Main.ts"
    ],
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["src/exampleTest/**/*", "src/**/*.test.ts", "node_modules/**/*"]
}
