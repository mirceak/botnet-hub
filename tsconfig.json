{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2021"],
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@kernel/*": ["./src/kernel/*"],
      "@database/*": ["./src/database/*"],
      "@remote/*": ["./src/remote/*"],
      "@kc/*": ["./src/kernel/composables/*"]
    }
  },
  "typedocOptions": {
    "name": "appDocumentation",
    "entryPoints": [
      "src/database/seed/remote/modules/mainRemote.ts",
      "src/main.ts"
    ],
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["src/exampleTest/**/*", "src/**/*.test.ts"]
}
